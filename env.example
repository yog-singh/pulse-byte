# Copy this file to .env and fill in your actual API keys

# News API Key (get from https://newsapi.org/)
NEWS_API_KEY=your_news_api_key_here

# OpenAI API Key (optional, for advanced sentiment analysis)
OPENAI_API_KEY=your_openai_api_key_here

# PostgreSQL Database Configuration (recommended)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pulse_byte
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# Database URL (optional, auto-constructed from above or use custom)
# DATABASE_URL=postgresql://username:password@localhost:5432/pulse_byte

# Database Connection Pool Settings (optional)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Logging level
LOG_LEVEL=INFO
